        .container {
            max-width: 800px;
            margin: 2rem auto;
            background-color: #ffffff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

        .header,
        .footer {
            text-align: center;
            padding: 1rem;
            background-color: #f7fafc;
            color: #718096;
        }

        .content {
            padding: 1.5rem;
        }

        .content h1 {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2d3748;
        }

        .content p {
            color: #4a5568;
            margin-top: 1rem;
            line-height: 1.5;
        }

        .message-container {
            text-align: center;
            margin-top: 1.5rem;
            background-color: #edf2f7;
            color: #2d3748;
            padding: 0.75rem;
            border-radius: 0.375rem;
        }

        .footer a {
            color: #4299e1;
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="content">
